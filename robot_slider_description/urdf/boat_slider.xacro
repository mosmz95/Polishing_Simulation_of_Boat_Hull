<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <link name="world"/>

    <link name="boat_link">
       <inertial> 
                <origin    xyz="0.0029912 -0.083551 0.56051"   rpy="0 0 0" />
                <mass value="300.98" />
                <inertia  ixx="65.942" ixy="-0.0012689" ixz="-0.044489"
                        iyy="74.027" iyz="-0.19476"
                        izz="15.95" />
        </inertial>
        <visual>
            <geometry>
            <mesh filename="package://robot_slider_description/meshes/boatwithstand.dae" scale="1 1 1"/>
            </geometry>
            
        </visual>
        <collision>
            <origin xyz="0 0.25 -12" rpy="0 1.57 0 " />
            <geometry>
                <box size="30 0.5 0.3"/>
            </geometry> 
        </collision>
    </link>
   

    <link name="rail_stand_link_right">
        <inertial> 
                <origin    xyz="0.0029912 -0.083551 0.56051"   rpy="0 0 0" />
                <mass value="300.98" />
                <inertia  ixx="65.942" ixy="-0.0012689" ixz="-0.044489"
                        iyy="74.027" iyz="-0.19476"
                        izz="15.95" />
        </inertial>

        <visual>
            <geometry>
            <mesh filename="package://robot_slider_description/meshes/rail_stand.dae" scale="1 1 1"/>
