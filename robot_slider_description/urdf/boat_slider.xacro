        <collision>
            <origin xyz="0.7 0.125 -12" rpy=" 0 1.57 0.0" />
            <geometry>
              <box size="30 0.25 1.3"/> 
            </geometry>
        </collision>
    </link>

    
    <joint name="boat_world_joint" type="fixed">
        <parent link="world" />
        <child link = "boat_link" />
        <origin xyz="0 0 0" rpy="1.57 0.0 0" />
    </joint>

    <joint name="rail_stand_right_world_joint" type="fixed">
        <parent link="world" />
        <child link = "rail_stand_link_right" />
        <origin xyz="1.2 0 0" rpy="1.57 0.0 0" />
    </joint>

   <xacro:include filename="Robotstand.xacro"/>

    <joint name="slider_link_rail_stand_right_joint" type="prismatic">
        <parent link="rail_stand_link_right" />
        <child link = "slider_link" />
        <origin xyz="0 0 0" rpy="-1.57 0.0 0" />
        <axis xyz="0.0 1 0.0"/>
        <limit lower="-1.8" upper="21" effort="3" velocity="2"/>
    </joint>

</robot>
